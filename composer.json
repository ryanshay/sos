{
    "name": "rshay/sos",
    "description": "A PHP library for translating between Natural Language and Morse code. Supports audio, visual, and blink translations.",
    "type": "library",
    "keywords": ["morse", "morse-code", "translator", "audio", "visual", "blink", "emergency", "sos"],
    "homepage": "https://github.com/rshay/sos",
    "license": "MIT",
    "authors": [
        {
            "name": "RCS",
            "email": "ryancshay@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4",
        "ext-gd": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "suggest": {
        "ext-json": "Required for JSON export functionality",
        "ext-pcntl": "Enhances terminal blinking capabilities"
    },
    "autoload": {
        "psr-4": {
            "SOS\\Translator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SOS\\Translator\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-text"
    }
}